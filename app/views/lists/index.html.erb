<%= render "shared/header" %>

<div class="list">
  <p class="new-list">新しいリストを作成</p>
  <%= form_with(model: @list, local: true) do |form| %>
    <div class="name">
      リスト名を入力してください
      <%= form.text_field :name, class:"form-tag-box1"%>
    </div>
    <div class="submit">
      <%= form.submit class:"submit-box"%>
    </div>
  <% end %>
</div>

<ul>
<div class="list-show">
  <% @lists.each do |list| %>
    <div class="index-name"><li><%= link_to list.name , list %></div></li>
  <% end %>
</div>
